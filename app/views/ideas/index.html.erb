<form class="new-idea">
  <fieldset class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Enter title for new idea">
  </fieldset>
  <fieldset class="form-group">
    <label for="quality">Quality</label>
    <input type="text" class="form-control" id="quality" placeholder="Genius, plausible, or swill">
  </fieldset>
  <fieldset class="form-group">
    <label for="body">Describe the idea</label>
    <textarea class="form-control" id="body" rows="3"></textarea>
  </fieldset>
  <button type="button" class="btn btn-primary" id="save-button">Save</button>
</form>

<h1>Your Ideas</h1>

